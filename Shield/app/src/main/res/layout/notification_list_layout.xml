<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp">


    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="id"
        android:id="@+id/tvNotificationId"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="3dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/tvNotificationMsg"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvNotificationId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="                        Notification"
        android:textSize="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tvNotificationMsg"
        android:layout_alignLeft="@+id/tvNotificationId"
        android:layout_alignStart="@+id/tvNotificationId"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Date"
            android:id="@+id/tvNotificationDate"
            android:layout_weight="0.49" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Time"
            android:id="@+id/tvNotificationTime"
            android:layout_weight="0.49" />
    </LinearLayout>
</RelativeLayout>
